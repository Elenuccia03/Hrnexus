<link rel="stylesheet" href="~/css/valutazione.css">

<div class="search-container">
        <input type="text" id="search" placeholder="Cerca dipendente...">
        <button id="search-button">Cerca</button>
    </div>
<div class="evaluation-form-container">
    <div class="evaluation-form">
        <h2>Scheda di Valutazione</h2>
        <div class="form-group">
            <label for="employee-name">Nome Dipendente</label>
            <input type="text" id="employee-name" placeholder="Nome e Cognome">
        </div>
        <div class="form-group">
            <label for="evaluation-period">Periodo di Valutazione</label>
            <input type="text" id="evaluation-period" placeholder="MM/AAAA - MM/AAAA">
        </div>
        
        <div class="form-group">
            <label>Valutazione delle Prestazioni</label>
            <div class="rating">
                <label>Qualit√† del Lavoro:</label>
                <input type="radio" name="work-quality" value="1"> 1
                <input type="radio" name="work-quality" value="2"> 2
                <input type="radio" name="work-quality" value="3"> 3
                <input type="radio" name="work-quality" value="4"> 4
                <input type="radio" name="work-quality" value="5"> 5
            </div>
            <div class="rating">
                <label>Collaborazione:</label>
                <input type="radio" name="teamwork" value="1"> 1
                <input type="radio" name="teamwork" value="2"> 2
                <input type="radio" name="teamwork" value="3"> 3
                <input type="radio" name="teamwork" value="4"> 4
                <input type="radio" name="teamwork" value="5"> 5
            </div>
        </div>
        
        <div class="form-group">
            <label for="comments">Commenti</label>
            <textarea id="comments" placeholder="Inserisci commenti qui..."></textarea>
        </div>
        
        <div class="form-group">
            <label for="evaluator-name">Nome del Valutatore</label>
            <input type="text" id="evaluator-name" placeholder="Nome e Cognome">
        </div>
        
        <div class="form-actions">
            <button onclick="saveEvaluation()">Salva</button>
        </div>
    </div>
</div>

<script>
    function saveEvaluation() {
        var employeeName = document.getElementById('employee-name').value;
        var evaluationPeriod = document.getElementById('evaluation-period').value;
        var comments = document.getElementById('comments').value;
        var evaluatorName = document.getElementById('evaluator-name').value;

        if (!employeeName || !evaluationPeriod || !evaluatorName) {
            alert('Tutti i campi sono obbligatori.');
            return;
        }

        alert('Valutazione salvata con successo!');
    }
</script>